<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tema6.biblioteca"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Biblioteca_Activity"
            android:label="@string/title_activity_biblioteca" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListLibro_Activity"
            android:label="@string/title_activity_biblioteca" >
        </activity>
         <activity
            android:name=".AddLibro_Activity"
            android:label="@string/title_activity_biblioteca" >
        </activity>

        <provider
            android:name=".BibliotecaProvider"
            android:authorities="com.tema6.biblioteca"
            android:writePermission="true" />
    </application>

</manifest>